@using MudBlazor
<MudDialog MaxWidth="MaxWidth.Small" FullWidth="true">
    <TitleContent>
        <MudText Typo="Typo.h6" Color="Color.Error">An Error Occurred</MudText>
    </TitleContent>

    <DialogContent>
        <MudPaper Class="pa-4" Style="background-color: #fff5f5;">
            <MudText Typo="Typo.body1">@Message</MudText>
        </MudPaper>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public string Message { get; set; } = "An unexpected error occurred.";

    private void Close() => MudDialog.Close();
}
